@model Revolutionary.Models.Mark

@{
    ViewData["Title"] = "Edit";
}

<h4>Edit Mark</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="(SelectList)@ViewData["UserId"]"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassId" class="control-label"></label>
                <select asp-for="ClassId" class="form-control" asp-items="(SelectList)@ViewData["ClassId"]"></select>
                <span asp-validation-for="ClassId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Theory" class="control-label"></label>
                <input asp-for="Theory" class="form-control" />
                <span asp-validation-for="Theory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Practical" class="control-label"></label>
                <input asp-for="Practical" class="form-control" />
                <span asp-validation-for="Practical" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assignment" class="control-label"></label>
                <input asp-for="Assignment" class="form-control" />
                <span asp-validation-for="Assignment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Penalty" class="control-label"></label>
                <input asp-for="Penalty" class="form-control" />
                <span asp-validation-for="Penalty" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
